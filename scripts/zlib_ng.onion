<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<Library name="zlib_ng">
	
	<SourceType>GitHub</SourceType>
	<SourceURL>https://github.com/zlib-ng/zlib-ng.git</SourceURL>

	<ConfigCommand>cmake ${SourcePath}</ConfigCommand>
	<BuildCommand>cmake --build ${BuildPath} --config Release ${MT}</BuildCommand>

	<Artifact platform="windows">
		<Type>Library</Type>
		<Location>Build</Location>
		<Destination>lib</Destination>
		<File>Release/zlibstatic-ng.lib</File>
	</Artifact>

	<Artifact platform="linux">
		<Type>Library</Type>
		<Location>Build</Location>
		<Destination>lib</Destination>
		<File>libz-ng.a</File>
	</Artifact>	

	<Artifact>
		<Type>Header</Type>
		<Location>Build</Location>
		<Destination>include</Destination>
		<File>zconf.h</File>
	</Artifact>

	<Artifact>
		<Type>Header</Type>
		<Location>Source</Location>
		<Destination>include</Destination>
		<File>zlib.h</File>
	</Artifact>

</Library>